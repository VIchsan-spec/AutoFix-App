<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".AddVehicleActivity">

    <TextView
        android:id="@+id/tvAddVehicleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_tambah_kendaraan"
        android:textColor="@color/accent_gold"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvAddVehicleTitle"
        app:layout_constraintBottom_toTopOf="@id/btnSimpanKendaraan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etNamaKendaraan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_nama_kendaraan"
                android:inputType="textPersonName"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:backgroundTint="@color/text_secondary"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etMerek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_merek"
                android:inputType="textPersonName"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:backgroundTint="@color/text_secondary"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_model"
                android:inputType="textPersonName"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:backgroundTint="@color/text_secondary"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etNomorPolisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_nomor_polisi"
                android:inputType="textCapCharacters"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:backgroundTint="@color/text_secondary"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etKilometer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_kilometer"
                android:inputType="number"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:backgroundTint="@color/text_secondary"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSimpanKendaraan"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="@string/btn_simpan_kendaraan"
        android:textColor="@color/background_primary"
        android:textStyle="bold"
        android:background="@drawable/bg_button_gradient_gold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>